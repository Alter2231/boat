<Window x:Class="boat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:boat"
        mc:Ignorable="d"
        Title="Авторизация" Height="400" Width="300"  ResizeMode="NoResize" Loaded="Window_Loaded" Background="DarkGray">
    <Grid>
        
        
        <StackPanel >
            <Image Source="../Resoursces/petuh.png" Width="140" Margin="20"></Image>
            <TextBlock Text="Логин" HorizontalAlignment="Center" ></TextBlock>
            <TextBox Name="Log" HorizontalAlignment="Center" Width="100"/>
            <TextBlock Text="Пароль" HorizontalAlignment="Center" />
            <TextBox Name="Pass" HorizontalAlignment="Center" Width="100"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button HorizontalAlignment="Center" Name="logIn"  Click="logIn_Click">Войти</Button>
                <Button Name="SignUp" Click="SignUp_Click">Регистрация</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
