<Window x:Class="boat.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:boat"
        mc:Ignorable="d"
        Title="Add" Height="250" Width="300" Background="DarkGray">
    <Grid>
        <StackPanel>
        <TextBlock HorizontalAlignment="Center">Логин</TextBlock>
            <TextBox Name="Log" Width="100" HorizontalAlignment="Center"></TextBox>
            <TextBlock HorizontalAlignment="Center">Пароль</TextBlock>
            <TextBox Name="Pass" Width="100" HorizontalAlignment="Center"></TextBox>
            <TextBlock HorizontalAlignment="Center">Роль</TextBlock>
            <ComboBox Name="Rol" Width="100" HorizontalAlignment="Center">
                <ComboBoxItem>admin</ComboBoxItem>
                <ComboBoxItem>user</ComboBoxItem>
            </ComboBox>
            <Button Name="add" Click="add_Click">Добавить</Button>
        </StackPanel>
    </Grid>
</Window>
